<%#= image_tag("paper.jpg")  %>
<h1 class="center", style="color: darkcyan", align="center"> Articles</h1>
<%= link_to 'New article', new_article_path, class: 'btn  btn-success', style: 'color:white' %>
<table class="table table-hover table-striped table-border">
  <tr class="success">
    <th>Title</th>
    <th>Text</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
    <th colspan="3"></th>
  </tr>
  <% @articles.each do |article| %>
    <tr >
      <td><%= article.title %></td>
      <td><%= truncate(article.text, :length=>80) %></td>
      <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary', style: 'color:White;' %></td>
      <% if user_signed_in? %>
      <% if current_user.admin == true || article.user == current_user %>
      <td><%= link_to 'Edit', edit_article_path(article),  class: 'btn btn-info',  style: 'color:White;' %></td>
      <td><%= link_to 'Destroy', article_path(article),
                      method: :delete,
                      data: { confirm: 'Are you sure?' }, class: 'btn btn-danger',  style: 'color:White;' %></td>
          <% end %>
        <% end %>
          </tr>
  <% end %>
</table>



